<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lAssets"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvAssets"
            fontPath="fonts/open_sans_semibold.ttf"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/margin20"
            android:layout_marginRight="@dimen/margin15"
            android:text="Chi nhánh Hồ Chí Minh"
            android:textColor="@color/color_tv_blue_btn_login"
            android:textSize="@dimen/text_semi_medium"
            tools:ignore="MissingPrefix"/>

        <ImageView
            android:id="@+id/ivCheckAssets"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tint="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>
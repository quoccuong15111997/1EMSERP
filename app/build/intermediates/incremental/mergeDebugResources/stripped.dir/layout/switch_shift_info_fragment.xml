        android:layout_height="match_parent" android:tag="layout/switch_shift_info_fragment_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" tools:context=".ui.signature.switchshift.info.SwitchShiftInfoFragment">

        <include
            android:id="@+id/include3"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/lyt_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/text__white">

    <TextView
        android:id="@+id/txtTitleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/spacing_mlarge"
        android:layout_marginRight="@dimen/spacing_mlarge"
        android:text="Thời gian"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/grey_80" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_large" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        app:flexWrap="wrap"
        app:justifyContent="flex_start">

        <Button
            android:id="@+id/btnNew"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_grey_blue"
            android:text="Mới --> Cũ"
            android:textAllCaps="false"
            android:textColor="@color/grey_40" />

        <Button
            android:id="@+id/btnOld"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_grey_blue"
            android:text="Cũ --> Mới"
            android:textAllCaps="false"
            android:textColor="@color/grey_40" />

    </com.google.android.flexbox.FlexboxLayout>
    <TextView
        android:id="@+id/txtTitleSort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/spacing_mlarge"
        android:layout_marginRight="@dimen/spacing_mlarge"
        android:text="Sắp xếp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/grey_80" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_large" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        app:flexWrap="wrap"
        app:justifyContent="flex_start">

        <Button
            android:id="@+id/btnAZ"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_grey_blue"
            android:text="A --> Z"
            android:textAllCaps="false"
            android:textColor="@color/grey_40" />

        <Button
            android:id="@+id/btnZA"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_grey_blue"
            android:text="Z --> A"
            android:textAllCaps="false"
            android:textColor="@color/grey_40" />


    </com.google.android.flexbox.FlexboxLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <Button
            android:id="@+id/btnOk"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Xem kết quả"
            android:textAllCaps="false"
            android:textColor="@color/text__white" />
    </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
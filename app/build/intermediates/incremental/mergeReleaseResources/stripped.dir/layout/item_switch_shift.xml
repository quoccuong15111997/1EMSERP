<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/EMSLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/text__white"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chkReShift">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtBeginDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/grey_60"
                tools:text="05/08/2020" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đến"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/blue_A200" />

            <TextView
                android:id="@+id/txtEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/grey_60"
                tools:text="13/08/2020" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txtTitleSpecies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:layout_marginLeft="3dp">

            <LinearLayout
                android:id="@+id/llSang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sáng: "
                    android:textColor="@color/blue_A200" />

                <TextView
                    android:id="@+id/txtContentSang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Không phép" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llChieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chiều: "
                    android:textColor="@color/blue_A200" />

                <TextView
                    android:id="@+id/txtContentChieu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Thích thì nghỉ" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llToi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tối: "
                    android:textColor="@color/blue_A200" />

                <TextView
                    android:id="@+id/txtContentToi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Nghỉ thôi cần gì lý do" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/txtTitleSum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/grey_60"
                android:textAlignment="center"
                tools:text="6" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/imgAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_outline_delete_24"
                app:tint="@color/grey_40" />

            <ImageView
                android:id="@+id/imgEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_outline_edit_24"
                app:tint="@color/grey_40" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
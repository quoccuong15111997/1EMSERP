<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/txtMainCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="95500120080008 - 01/08/2020" />

    <TextView
        android:id="@+id/txtTitleNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Diễn giải"
        app:layout_constraintStart_toStartOf="@+id/txtMainCode"
        app:layout_constraintTop_toBottomOf="@+id/txtLabel" />

    <TextView
        android:id="@+id/txtNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Test thôi"
        android:textColor="@color/grey_80"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtTitleNote"
        app:layout_constraintTop_toTopOf="@+id/txtTitleNote" />

    <TextView
        android:id="@+id/txtTileStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Trạng thái"
        android:textColor="@color/red_800"
        app:layout_constraintEnd_toEndOf="@+id/txtTitleNote"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtTitleNote"
        app:layout_constraintTop_toBottomOf="@+id/txtNote" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/red_800"
        app:layout_constraintBottom_toBottomOf="@+id/txtTileStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtNote"
        app:layout_constraintTop_toTopOf="@+id/txtTileStatus"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Đang chờ phê duyệt" />

    <TextView
        android:id="@+id/txtLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/txtMainCode"
        app:layout_constraintTop_toBottomOf="@+id/txtMainCode"
        tools:text="Số tiền" />

    <TextView
        android:id="@+id/txtLabelValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_80"
        app:layout_constraintBottom_toBottomOf="@+id/txtLabel"
        app:layout_constraintStart_toStartOf="@+id/txtNote"
        app:layout_constraintTop_toTopOf="@+id/txtLabel"
        tools:text="8.000.000" />

    <TextView
        android:id="@+id/txtUom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@color/grey_80"
        app:layout_constraintBottom_toBottomOf="@+id/txtLabelValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtLabelValue"
        app:layout_constraintTop_toTopOf="@+id/txtLabelValue"
        tools:text="VND" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                               
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" android:tag="layout/layout_select_date_0" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/imgCalenda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_calenda" />

        <TextView
            android:id="@+id/txtBeginDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17/07/2020"
            app:layout_constraintBottom_toBottomOf="@+id/imgCalenda"
            app:layout_constraintStart_toEndOf="@+id/imgCalenda"
            app:layout_constraintTop_toTopOf="@+id/imgCalenda" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/txtBeginDate"
            app:layout_constraintStart_toEndOf="@+id/txtBeginDate"
            app:layout_constraintTop_toTopOf="@+id/txtBeginDate" />

        <TextView
            android:id="@+id/txtEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="23/07/2020"
            app:layout_constraintBottom_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toEndOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/textView22" />

        <ImageView
            android:id="@+id/imageView12"
            android:tint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txtEndDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtEndDate"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>

         
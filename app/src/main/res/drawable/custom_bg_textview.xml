<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/text__white" />
            <stroke
                android:width="0.5sp"
                android:color="@color/colorTransparent" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>

            <solid android:color="@color/grey_10" />

            <stroke
                android:width="0.5sp"
                android:color="@color/colorTransparent" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>